<Window x:Class="test.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:test"
        mc:Ignorable="d"
        Title="MainWindow" Height="470" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100px"></RowDefinition>
            <RowDefinition Height="300px"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBox Width="200px"
                     Name="srchTb"
                     Text="{Binding SrchWrd}"
                     HorizontalAlignment="Right"
                     Height="30px" 
                     Grid.Row="0"
                     Grid.Column="0"
                     Margin="10px 10px 10px 10px"></TextBox>
        <Button x:Name="btnSrch" 
                    Command="{Binding SearchCommand}"
                    CommandParameter="{Binding srchTb}"
                    Grid.Row="0"
                    Grid.Column="1"
                    HorizontalAlignment="Left"
                    Width="200px" Height="30px" 
                    Margin="10px 10px 10px 10px">Search</Button>
        <DataGrid SelectedItem="{Binding SelectedCrypto}" 
                  x:Name="dataGrid" 
                  HorizontalAlignment="Center"
                  VerticalAlignment="Top"
                  Width="750px"
                  Height="330px"
                  SelectionMode="Single"
                  IsReadOnly="True"
                  AutoGenerateColumns="True"
                  HorizontalGridLinesBrush="DarkGray"
                  RowBackground="LightGray" 
                  AlternatingRowBackground="White"
                  Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                  ItemsSource="{Binding dataGrid, Mode=TwoWay, NotifyOnSourceUpdated=True, UpdateSourceTrigger=PropertyChanged}">
            <DataGrid.InputBindings>
                <MouseBinding
                    MouseAction="LeftDoubleClick"
                    Command="{Binding DetailsCommand}"
                    CommandParameter="{Binding SelectedCrypto/}"/>
            </DataGrid.InputBindings>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Code" 
                                    Binding="{Binding Path=Asset_Id}" 
                                    Width="250" />
                <DataGridTextColumn Header="Name" 
                                    Binding="{Binding Path=Name}" 
                                    Width="250" />
                <DataGridTextColumn Header="Price" 
                                    Binding="{Binding Path=Price}" 
                                    Width="250" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window> 